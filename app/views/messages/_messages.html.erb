<div id="messages" class="messages">
    <div id="messages-table" class="messages-table">
        <% if @messages.any? %>
        <% @messages.each do |message| %>
        <div class="message">
            <div class="message-user">
                <%= message.user.username %>:
            </div>
            <div class="message-content">
                <%= message.content %>
            </div>
        </div>
        <% end %>
        <% end %>
    </div>
</div>
